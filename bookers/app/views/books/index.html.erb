<% if flash[:notice] %>
  <p id="notice"><%= flash[:notice] %></p>
<% end %>
<h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Boddy</th>
    <th></th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
        <%= link_to "Show", book_path(book), class: "show_#{book.id}" %>
        <%= link_to "Edit", edit_book_path(book), class: "edit_#{book.id}" %>
        <%= link_to "Destroy", book_path(book), method: :delete, class: "destroy_#{book.id}" %>
      </td>
    </tr>
  <% end %>
</table>

<h2>New Book</h2>
<% if @book.errors.any? %>
  <div id="error_explanation" class"alert alert-danger">
      <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    </div>
<% end %>
<%= form_with model: @book, local:true do |f| %>
    <div class="field">
      <label for="book_title">Title</label>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <label or="book_body">Body</label>
      <%= f.text_field :body %>
    </div>
    <div class="actions">
      <%= f.submit 'Create Book' %>
    </div>
<% end %>